<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <% if(!contact) { %>
      <div class="alert alert-danger" role="alert">Data contact tidak ditemukan <br /><a class="btn btn-danger badge" href="/contact" role="button">&laquo; Kembali</a></div>

      <% } else { %>
      <h2>Detail Contact</h2>
      <div class="card mt-3" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.nama %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary"><%= contact.nohp %></h6>
          <p class="card-text"><%= contact.email %></p>
          <a class="btn btn-primary btn-sm" href="/contact/edit/<%= contact.nama %>" role="button"><i class="bi bi-pencil"></i> Edit</a>
          <a class="btn btn-danger btn-sm" href="/contact/delete/<%= contact.nama %>" role="button" onclick="return confirm('Apakah Anda yakin ingin menghapus contact ini?');"><i class="bi bi-trash3"></i> Hapus</a>
          <a class="btn btn-dark btn-sm" href="/contact" role="button">&laquo; Kembali</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
