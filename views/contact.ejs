<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <% if(contacts.length === 0) { %>
      <tr>
        <td colspan="4"><div class="alert alert-danger" role="alert">Data contact masih kosong</div></td>
      </tr>
      <% } %>
      <h2>Daftar Contact</h2>
      <a class="btn btn-primary btn-sm rounded-pill mt-3" href="/contact/add" role="button"><i class="bi bi-plus-circle"></i> Tambah</a>

      <% if(msg.length !== 0) { %>
      <div class="alert alert-success mt-2" role="alert"><%= msg %></div>
      <% } %>

      <table class="table mt-3">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">No. HP</th>
            <th scope="col">Email</th>
          </tr>
        </thead>
        <tbody>
          <% contacts.forEach((contact, i) => { i++ %>
          <tr>
            <th scope="row"><%= i++ %></th>
            <td><%= contact.nama %></td>
            <td><%= contact.nohp %></td>
            <td>
              <a class="btn btn-primary badge rounded-pill fw-normal" href="/contact/<%= contact.nama %> " role="button"><i class="bi bi-info-circle"></i> Detail</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
